<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

	{{!-- Sheet Header --}}
	<header class="sheet-header flexrow">
		<img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
		
		<section class="header-details flexrow">
			{{!-- maybe something here --}}

			{{!-- character name --}}
			<h1 class="charname">
				<input name="name" type="text" value="{{actor.name}}" placeholder="{{ localize 'SRPG.Name' }}"/>
			</h1>

			{{!-- character hp IN PROGRESS --}}
			<h4 class="charname">
				<input name="actor.system.hp.value" type="number" value="{{actor.system.hp.value}}" placeholder="{{ localize 'SRPG.hitPoints' }}">
			</h4>

		</section>
	</header>

	{{!-- Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		<a class="item" data-tab="skills">{{localize 'SRPG.skills'}}</a>
		<a class="item" data-tab="bio">{{localize 'SRPG.bio'}}</a>
	</nav>

	{{!-- Sheet Body --}}
	<section class="sheet-body">
	</section>


</form>